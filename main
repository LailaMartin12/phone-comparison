  <script>
    const root = document.documentElement;
    const themeBtn = document.getElementById('themeBtn');
    const saved = localStorage.getItem('pc_theme');
    if(saved){ root.setAttribute('data-theme', saved); }
    themeBtn.addEventListener('click', () => {
      const next = root.getAttribute('data-theme') === 'light' ? '' : 'light';
      if(next){ root.setAttribute('data-theme', next); localStorage.setItem('pc_theme', next); }
      else { root.removeAttribute('data-theme'); localStorage.removeItem('pc_theme'); }
    });
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
